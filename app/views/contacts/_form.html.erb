<%= form_for @contact, :class => "form-horizontal", remote: true do |f| %>
  <div class ="form-group">
    <%= f.label :first_name, :class => "col-sm-3 control-label" %>
    <%= f.text_field :first_name %>
  </div>
  <div class ="form-group">
    <%= f.label :last_name, :class => "col-sm-3 control-label" %>
    <%= f.text_field :last_name %>
  </div>
  <div class ="form-group">
    <%= f.label :phone_number, :class => "col-sm-3 control-label" %>
    <%= f.text_field :phone_number %>
  </div>
  <div class ="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Add Contact", :id => "button", :class => "btn btn-xl btn-primary" %>
    </div>
  </div>
<% end %>
