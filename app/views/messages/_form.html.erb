<%= form_for @message, :class => "form-horizontal", remote: true do |f| %>
  <div class ="form-group">
    <%= f.label :to, :class => "col-sm-3 control-label" %>
    <%= f.text_field :to %>
  </div>
  <div class ="form-group">
    <%= f.label :from, :class => "col-sm-3 control-label" %>
    <%= f.text_field :from %>
  </div>
  <div class ="form-group">
    <%= f.label :body, :class => "col-sm-3 control-label" %>
    <%= f.text_field :body %>
  </div>
  <div class ="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Send Message", :id => "button", :class => "btn btn-xl btn-primary" %>
    </div>
  </div>
<% end %>
